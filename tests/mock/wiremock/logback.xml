<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Console appender -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- WireMock internals -->
  <logger name="com.github.tomakehurst.wiremock" level="DEBUG"/>

  <!-- Apache HttpClient 4.x -->
  <logger name="org.apache.http" level="DEBUG"/>
  <logger name="org.apache.http.wire" level="DEBUG"/>

  <!-- Apache HttpClient 5.x -->
  <logger name="org.apache.hc.client5" level="DEBUG"/>
  <logger name="org.apache.hc.core5.http" level="DEBUG"/>
  <logger name="org.apache.hc.client5.http.wire" level="DEBUG"/>

  <!-- Java 11+ HttpClient -->
  <logger name="jdk.internal.httpclient" level="DEBUG"/>
  <logger name="java.net.http" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
